<!DOCTYPE html>
html(lang="ru")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")

		link(rel="stylesheet" href="css/rangeSlider.css")

		title rangeSlider
	body
		h1#text
		input(type="text" name="rangeSlider")#input
		.rangeSlider#track
			.rangeSlider__current
				.rangeSlider__line

			.rangeSlider__fill
				.rangeSlider__line

			.rangeSlider__thumb#thumb

		h1#textStep
		input(type="text" name="rangeSliderStep")#inputStep
		.rangeSlider#trackStep
			.rangeSlider__current
				.rangeSlider__line
					.rangeSlider__step
					.rangeSlider__step
					.rangeSlider__step
					.rangeSlider__step
					.rangeSlider__step
					.rangeSlider__step
					.rangeSlider__step

			.rangeSlider__fill
				.rangeSlider__line
					.rangeSlider__step
					.rangeSlider__step
					.rangeSlider__step
					.rangeSlider__step
					.rangeSlider__step
					.rangeSlider__step
					.rangeSlider__step

			.rangeSlider__thumb#thumbStep

		script(src="js/rangeSlider.js")
		script(src="js/main.js")
